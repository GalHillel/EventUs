<resources>

    <!-- Your App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Other theme attributes -->
    </style>

    <!-- Your App Button Style -->
    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="DefaultClickableButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:backgroundTint">@color/colorButtonDefault</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

    </style>

    <style name="clickableListItem" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="message_unread">
        <item name="android:background">@color/message_unread</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="message_read" parent="clickableListItem">
        <item name="android:background">@color/message_read</item>
        <item name="android:textColor">@android:color/black</item>

    </style>

</resources>