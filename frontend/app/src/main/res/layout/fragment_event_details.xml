<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.events.EventDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/eventDetailsTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:text="Event Details"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/eventNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/eventDetailsTitle"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/eventDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/eventNameTextView"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/eventLocationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:layout_below="@id/eventDateTextView"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/eventDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/eventLocationTextView"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/joinEventButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join Event"
            android:layout_below="@id/eventDescriptionTextView"
            app:backgroundTint="#00bbff"
            android:layout_marginTop="16dp"
            android:onClick="onJoinEventClick"/>

        <Button
            android:id="@+id/leaveEventButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leave Event"
            android:layout_below="@id/joinEventButton"
            app:backgroundTint="#00bbff"
            android:layout_marginTop="16dp"
            android:onClick="onLeaveEventClick"/>

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="346dp"
            android:layout_marginTop="223dp"
            android:contentDescription="Back"
            android:onClick="onBackButtonClick"
            android:src="@drawable/ic_back" />


    </RelativeLayout>
</ScrollView>