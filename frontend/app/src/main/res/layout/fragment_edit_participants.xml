<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.organizer.EditParticipantsFragment">
    <include layout="@layout/organizer_navigation" />

    <TextView
        android:id="@+id/editParticipantsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Edit Participants"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/saveParticipantChangesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="610dp"
        android:onClick="onSaveParticipantChangesClick"
        android:text="Save Changes" />

</FrameLayout>