<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CustomFragmentScreen"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.screens.UserProfileFragment"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/userPhotoImageView"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:src="@drawable/default_user_photo" />

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="User Name"
            android:textSize="18sp"
            android:textStyle="bold" />



        <RatingBar
            android:id="@+id/userRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:numStars="5"
            android:rating="0"

            android:stepSize="0.5" />

        <TextView
            android:id="@+id/ratingCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="0 Ratings"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/textfield_background"
            android:layout_marginTop="16dp">
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/bioTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:hint="User Bio"
                    android:textSize="16sp"
                    android:focusable="false"
                    android:clickable="false"
                    android:visibility="visible" />
        </LinearLayout>


        <Button
            android:id="@+id/sendMessageButton"
            style="@style/DefaultClickableButton"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Send Message"
        />

        <Button
            android:id="@+id/editProfileButton"
            style="@style/DefaultClickableButton"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:text="Edit Profile"
        />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/logout"
            style="@style/badClickableButton"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Log out" />

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="97dp"
            android:layout_height="62dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />

<include layout="@layout/user_navigation" />



</LinearLayout>