<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CustomFragmentScreen"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.screens.UserProfileFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/userPhotoImageView"
            android:layout_width="145dp"
            android:layout_height="126dp"
            android:layout_gravity="center"
            android:src="@drawable/default_user_photo"/>

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="User Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bioTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            android:text="User Bio"
            android:textSize="16sp" />

        <RatingBar
            android:id="@+id/userRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:numStars="5"
            android:rating="0"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/ratingCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="0 Ratings"
            android:textColor="@color/black"
            android:textSize="14sp" />


        <Button
            android:id="@+id/saveRatingButton"
            style="@style/DefaultClickableButton"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Save Rating"
            android:visibility="visible" />


        <Button
            android:id="@+id/sendMessageButton"
            style="@style/DefaultClickableButton"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Send Message"
            />

        <Button
            android:id="@+id/editProfileButton"
            style="@style/DefaultClickableButton"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:text="Edit Profile"
             />

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="97dp"
            android:layout_height="62dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />
    </LinearLayout>



    <include layout="@layout/user_navigation" />

</LinearLayout>
