<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.user.UserEventDetailsShow">



    <TextView
        android:id="@+id/Event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Events name"
        android:textColor="@color/blue"
        android:textSize="30sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Event_name_desplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Events name"
        android:textColor="@color/blue"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Event_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Events date"
        android:textColor="@color/blue"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Event_name"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Event_date_desplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Events date"
        android:textColor="@color/blue"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/Event_date"
        app:layout_constraintTop_toBottomOf="@id/Event_name_desplay"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Location"
        android:textColor="@color/blue"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Event_date" />

    <TextView
        android:id="@+id/Event_location_desplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Events location"
        android:textColor="@color/blue"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/Event_location"
        app:layout_constraintTop_toBottomOf="@id/Event_date_desplay"
        tools:ignore="MissingConstraints" />



</androidx.constraintlayout.widget.ConstraintLayout>