<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainMenuUserFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.eventus.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <!-- Define actions for the login screen -->
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <!-- Add any other actions needed for the login screen -->
    </fragment>

    <fragment
        android:id="@+id/mainMenuUserFragment"
        android:name="com.example.eventus.MainMenuUser"
        android:label="MainMenuUserFragment"
        tools:layout="@layout/fragment_main_menu_user">
        <!-- Define any necessary actions for the main menu fragment -->
        <action
            android:id="@+id/action_mainMenuUserFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_mainMenuUserFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>

    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.eventus.ui.registration.RegistrationFragment"
        android:label="RegistrationFragment"
        tools:layout="@layout/fragment_registration">
        <!-- Define actions for the registration fragment -->
        <action
            android:id="@+id/action_registrationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>
