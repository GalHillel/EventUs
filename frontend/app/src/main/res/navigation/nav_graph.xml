<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainMenuUserFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.eventus.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_loginFragment_to_userEventsFragment"
            app:destination="@id/userEventsFragment" />
        <action
            android:id="@+id/action_loginFragment_to_organizerEvents"
            app:destination="@id/organizerEvents" />

    </fragment>

    <fragment
        android:id="@+id/mainMenuUserFragment"
        android:name="com.example.eventus.ui.mainScreen.MainMenuUser"
        android:label="MainMenuUserFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainMenuUserFragment_to_loginFragment"
            app:destination="@id/loginFragment" />

    </fragment>

    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.eventus.ui.registration.RegistrationFragment"
        android:label="RegistrationFragment"
        tools:layout="@layout/fragment_registration">
        <action
            android:id="@+id/action_registrationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/userEventsFragment"
        android:name="com.example.eventus.ui.user.UserEventsFragment"
        android:label="UserEventsFragment"
        tools:layout="@layout/fragment_user_events">
        <action
            android:id="@+id/action_userEventsFragment_to_userDiscoverFragment"
            app:destination="@id/userDiscoverFragment" />
        <action
            android:id="@+id/action_userEventsFragment_to_profileFragment"
            app:destination="@id/userProfileFragment" />
        <action
            android:id="@+id/action_userEventsFragment_to_userMessagesFragment"
            app:destination="@id/userMessagesFragment" />

    </fragment>

    <fragment
        android:id="@+id/userDiscoverFragment"
        android:name="com.example.eventus.ui.user.UserDiscoverFragment"
        android:label="UserDiscoverFragment"
        tools:layout="@layout/fragment_user_discover">
        <action
            android:id="@+id/action_userDiscoverFragment_to_userEventsFragment"
            app:destination="@id/userEventsFragment" />
        <action
            android:id="@+id/action_userDiscoverFragment_to_profileFragment"
            app:destination="@id/userProfileFragment" />
        <action
            android:id="@+id/action_userDiscoverFragment_to_userMessagesFragment"
            app:destination="@id/userMessagesFragment" />
    </fragment>

    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.example.eventus.ui.user.UserProfileFragment"
        android:label="UserProfileFragment"
        tools:layout="@layout/fragment_user_profile">
        <action
            android:id="@+id/action_userProfileFragment_to_userEventsFragment"
            app:destination="@id/userEventsFragment" />
        <action
            android:id="@+id/action_userProfileFragment_to_userDiscoverFragment"
            app:destination="@id/userDiscoverFragment" />
        <action
            android:id="@+id/action_userProfileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_userProfileFragment_to_userMessagesFragment"
            app:destination="@id/userMessagesFragment" />

    </fragment>

    <fragment
        android:id="@+id/organizerProfileFragment"
        android:name="com.example.eventus.ui.organizer.OrganizerProfileFragment"
        android:label="OrganizerProfileFragment"
        tools:layout="@layout/fragment_organizer_profile">

        <action
            android:id="@+id/action_organizerProfileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_organizerProfileFragment_to_organizerMessages"
            app:destination="@id/organizerMessages" />
        <action
            android:id="@+id/action_organizerProfileFragment_to_organizerEvents"
            app:destination="@id/organizerEvents" />
        <action
            android:id="@+id/action_organizerProfileFragment_to_createEventFragment"
            app:destination="@id/createEventFragment" />
    </fragment>

    <fragment
        android:id="@+id/organizerMessages"
        android:name="com.example.eventus.ui.organizer.OrganizerMessagesFragment"
        android:label="OrganizerMessagesFragment"
        tools:layout="@layout/fragment_organizer_messages">

        <action
            android:id="@+id/action_organizerMessages_to_organizerProfileFragment"
            app:destination="@id/organizerProfileFragment" />
        <action
            android:id="@+id/action_organizerMessages_to_organizerEvents"
            app:destination="@id/organizerEvents" />
        <action
            android:id="@+id/action_organizerMessages_to_createEventFragment"
            app:destination="@id/createEventFragment" />
    </fragment>

    <fragment
        android:id="@+id/organizerEvents"
        android:name="com.example.eventus.ui.organizer.OrganizerEventsFragment"
        android:label="OrganizerEventsFragment"
        tools:layout="@layout/fragment_organizer_event">
        <action
            android:id="@+id/action_organizerEvents_to_organizerMessages"
            app:destination="@id/organizerMessages" />
        <action
            android:id="@+id/action_organizerEvents_to_organizerProfileFragment"
            app:destination="@id/organizerProfileFragment" />
        <action
            android:id="@+id/action_organizerEvents_to_createEventFragment"
            app:destination="@id/createEventFragment" />
        <action
            android:id="@+id/action_organizerEvents_to_userEventDetailsShow"
            app:destination="@id/userEventDetailsShow" />
    </fragment>

    <fragment
        android:id="@+id/userMessagesFragment"
        android:name="com.example.eventus.ui.user.UserMessagesFragment"
        android:label="UserMessagesFragment"
        tools:layout="@layout/fragment_user_messages">

        <action
            android:id="@+id/action_userMessagesFragment_to_userDiscoverFragment"
            app:destination="@id/userDiscoverFragment" />
        <action
            android:id="@+id/action_userMessagesFragment_to_userEventsFragment"
            app:destination="@id/userEventsFragment" />
        <action
            android:id="@+id/action_userMessagesFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/createEventFragment"
        android:name="com.example.eventus.ui.organizer.CreateEventFragment"
        android:label="CreateEventFragment"
        tools:layout="@layout/fragment_create_event">

        <action
            android:id="@+id/action_createEventFragment_to_organizerProfileFragment"
            app:destination="@id/organizerProfileFragment" />
        <action
            android:id="@+id/action_createEventFragment_to_organizerMessages"
            app:destination="@id/organizerMessages" />
        <action
            android:id="@+id/action_createEventFragment_to_organizerEvents"
            app:destination="@id/organizerEvents" />
    </fragment>

    <fragment
        android:id="@+id/userEventDetailsShow"
        android:name="com.example.eventus.ui.user.UserEventDetailsShow"
        android:label="fragment_user_event_details_show"
        tools:layout="@layout/fragment_user_event_details_show">
    </fragment>



</navigation>